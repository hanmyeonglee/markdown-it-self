{
  "name": "markdown-it-self",
  "version": "1.0.0",
  "description": "Custom markdown renderer with hot reload",
  "main": "./out/build/builder.js",
  "scripts": {
    "start": "node out/server/server.js",
    "dev": "npx ts-node src/server/server.ts",
    "build:ts": "tsc",
    "build:md": "node out/build/builder.js",
    "build": "npm run build:ts && npm run build:md"
  },
  "dependencies": {
    "@mdit/plugin-attrs": "^0.24.1",
    "@mdit/plugin-container": "^0.22.2",
    "@mermaid-js/mermaid-cli": "^11.12.0",
    "@types/markdown-it-emoji": "^3.0.1",
    "chokidar": "^3.5.3",
    "express": "^4.18.2",
    "gray-matter": "^4.0.3",
    "katex": "^0.16.27",
    "markdown-it": "^14.0.0",
    "markdown-it-anchor": "^9.2.0",
    "markdown-it-bracketed-spans": "^1.0.1",
    "markdown-it-emoji": "^3.0.0",
    "markdown-it-texmath": "^1.0.0",
    "module-alias": "^2.2.3",
    "shiki": "^3.21.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/markdown-it": "^14.1.2",
    "@types/markdown-it-attrs": "^4.1.3",
    "@types/node": "^20.11.0",
    "@types/ws": "^8.5.10",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
